{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": "test/unit/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@identity/(.*)$": "<rootDir>/src/$1",
    "^@timeboxing/shared$": "<rootDir>/../../shared/src"
  },
  "testEnvironment": "node"
}