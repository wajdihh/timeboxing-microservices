{
  "name": "@timeboxing/shared",
  "version": "1.0.0",
  "private": true,
  "description": "Shared utilities and modules for microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./logging": {
      "types": "./dist/logging/index.d.ts",
      "require": "./dist/logging/index.js",
      "import": "./dist/logging/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "nest-winston": "^1.10.2",
    "rxjs": "^7.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
